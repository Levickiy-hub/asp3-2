
@using _04.Models
@{
    Layout = null;
    List<Phone> phones = ViewBag.phones;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Номер телефона</th>
            <th>Обновить</th>
            <th>Удалить</th>
        </tr>

        @foreach (var d in phones)
        {
            <tr>
                <td>@d.PhoneId</td>
                <td>@d.LastName</td>
                <td>@d.FirstName</td>
                <td>+@d.Number</td>
                <td><a href="/phone/update?id=@d.PhoneId">Update</a></td>
                <td><a href="/phone/delete?id=@d.PhoneId">Delete</a></td>
            </tr>
        }
    </table>

    <a href="/Phone/add">Insert</a>
</body>
</html>
